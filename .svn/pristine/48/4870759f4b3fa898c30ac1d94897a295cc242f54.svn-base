.loginWrap {
  height: 100%;
  background: url('../../assets/images/entranceImgs/loginBg.png') no-repeat center center;
  background-size: 100% 100%;
}
.loginBox {
  float: right;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 1040px;
  height: 100%;

  .logo {
    margin: 0 auto 150px auto;
    width: 694px;
    img {
      &:nth-child(2) {
        float: right;
        margin-top: 10px;
      }
    }
    h3 {
      text-align: right;
      font-size: 50px;
    }
  }
  .formBox {
    padding: 55px 110px 0 110px;
    width: 709px;
    height: 417px;
    background: url('../../assets/images/entranceImgs/loginFormBg.png') no-repeat center center;
    text-align: left;
    .loginTxt {
      margin-bottom: 30px;
      font-size: 18px;
    }
    .submitBtn {
      margin: 25px auto;
      display: block;
    }
  }
}