@import '@/assets/styles/mixin.scss';
.bodyMain {
  margin: 0 auto;
  width: 1845px;
}

.waterTableWrap {
  display: table;
  margin: 10px auto;
  width: 98%;
  border: 2px solid #007e7d;
  @include sc(20px, #00def0);

  li {
    display: table-cell;
    font-size: 22px;
    text-align: center;

    .th {
      line-height: 80px;
      background: #0b274a;
      color: #fff;
    }

    span {
      display: block;
      height: 65px;
      line-height: 65px;

      &:nth-child(odd) {
        background: #0b274a;
      }
    }
  }
}